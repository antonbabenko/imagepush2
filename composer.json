{
    "name": "antonbabenko/imagepush2",
    "description": "imagepush.to",
    "authors": [
        {
            "name": "Anton Babenko",
            "email": "anton@imagepush.to"
        }
    ],

    "require": {
        "php":                           ">=5.3.9",

        "symfony/symfony":               "2.8.18",
        "twig/twig":                     "^1.0||^2.0",
        "symfony/assetic-bundle":        "~2.3",
        "symfony/monolog-bundle":        "^3.0.2",
        "symfony/swiftmailer-bundle":    "~2.3,>=2.3.10",
        "doctrine/doctrine-bundle":      "~1.6",
        "twig/extensions":               "~1.0",
        "sensio/distribution-bundle":    "~4.0",
        "sensio/framework-extra-bundle": "^3.0.2",
        "incenteev/composer-parameter-handler": "~2.0",

        "liip/imagine-bundle":           "0.21.1",
        "knplabs/knp-gaufrette-bundle":  "~0.3",
        "guzzlehttp/guzzle":             "dev-master",
        "aws/aws-sdk-php-symfony":       "^1.2"

    },
    "require-dev": {
        "sensio/generator-bundle":       "~3.0",
        "friendsofphp/php-cs-fixer":     "0.3.*"
    },

    "scripts": {
        "symfony-scripts": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "post-install-cmd": [
            "@symfony-scripts"
        ],
        "post-update-cmd": [
            "@symfony-scripts"
        ]
    },

    "minimum-stability": "stable",

    "autoload": {
        "psr-4": {
            "": "src/"
        },
        "classmap": [ "app/AppKernel.php", "app/AppCache.php" ]
    },

    "config": {
        "bin-dir": "bin/",
        "process-timeout": 3600,
        "github-protocols": ["https"],
        "sort-packages": true
    },

    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "symlink",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml",
            "keep-outdated": true
        }
    }
}
